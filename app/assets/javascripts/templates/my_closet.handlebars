<button class="show-closet-item-add-form">Add New Closet Item</button>
<div id="tabs">
  <ul>
    <li><a href="#tabs-top">Top</a></li>
    <li><a href="#tabs-bottom">Bottom</a></li>
    <li><a href="#tabs-outerwear">Outerwear</a></li>
    <li><a href="#tabs-accessory">Accessory</a></li>
  </ul>
  {{#each categories}}
    <div id="tabs-{{name}}" class="tabs-inner">
      {{#each clothing_items}}
        <div class="clothing-item" data-id="{{id}}">
          <img data-id="{{id}}" src="/placeholder.jpg" height="200" />
          <span data-id="{{id}}">{{category}}/{{color}}/{{size}}/{{material}}</span> 
          <button class="edit-closet-item">Edit</button>
          <button class="delete-closet-item">Delete</button>  
        </div>
      {{/each}}
    </div>
  {{/each}}
</div>

<script>
  $('#tabs').tabs();
</script>


<form>
  <input type="text">
  <button> Update</button>
</form>
